<!DOCTYPE html>
<html lang="fr">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Trello Projects</title>

  <!-- Bootstrap core CSS -->
  <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="../css/simple-sidebar.css" rel="stylesheet">

  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/css/bootstrap.css" rel="stylesheet" />

</head>

<body>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading">Trello Project </div>
      <div class="list-group list-group-flush">
        <a href="/my-projects" class="list-group-item list-group-item-action  active">My projects</a>
        <a href="/tasks" class="list-group-item list-group-item-action bg-light">Tasks list</a>
        <a href="/conversation" class="list-group-item list-group-item-action bg-light">Conversation </a>
        <a href="/Git-commit" class="list-group-item list-group-item-action bg-light">Last Git commits</a>

      </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- HEADER -->

    <div id="page-content-wrapper">
      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle">Menu</button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                PSEUDO
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="#">Profile ?</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Disconnect</a>
              </div>
            </li>
          </ul>
        </div>
      </nav>


<!-- Page Content -->

<div class="container">
  <% if(project == "new"){ %>
  <form action="/save_project/new" method="POST">
  <% } else { %>
  <form action="/save_project/<%= project.name %>" method="POST">
  <% } %>
    <!-- marge top-->
  <div class="row mt-5">
    <!-- marge à gauche-->
    <div class="col-1">
    </div>
    <div class="col-2 text-right">
      Title : 
    </div>
    <div class="col-1">
    </div>
    <div class="col-6">
      <!-- si c'est un nouveau projet le titre est modifiable-->
      <% if(project == "new"){ %>
        <div class="form-group">
          <input type="text" class="form-control" id="InputTitle" name="title" />
        </div>
      <% } else { %>
      <%= project.name %>
      <% } %>
    </div>
    <div class="col-2">
    </div>
  </div>
  <div class="row mt-5">
    <!-- marge à gauche-->
    <div class="col-1">
    </div>
    <div class="col-2 text-right">
      Members : 
    </div>
    <div class="col-1">
    </div>
    <div class="col-6">
        <div class="form-group">
          <input type="text" class="form-control" id="InputMembers" name="members" />
        </div>
    </div>
    <div class="col-2">
    </div>
  </div>
  <!-- marge top-->
  <div class="row mt-5">
    <!-- marge à gauche-->
    <div class="col-2">
    </div>
    <div class="col-8">
      <div class="form-group text-center">
          <input type="submit" id="save"  name="save" value="save" class="btn btn-primary"/>
      </div>
    </div>
    <div class="col-2">
    </div>
  </div>
  <div class="row">
    <!-- marge à gauche-->
    <div class="col-2">
    </div>
    <div class="col-8">
      <div class="form-group  text-center">
        <a href="/my-projects">Cancel</a>
      </div>
    </div>
    <div class="col-2">
    </div>
  </div>
</form>
</div>



  <!-- /#page-content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Bootstrap core JavaScript -->
  <script src="../vendor/jquery/jquery.min.js"></script>
  <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Menu Toggle Script -->
  <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>

</body>

</html>
